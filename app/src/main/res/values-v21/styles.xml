<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/bg_topbar</item>
        <item name="android:colorPrimaryDark">@color/bg_toolbardark</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarMenuAppearance</item>
        <item name="android:actionMenuTextColor">@color/write</item>
    </style>
    
    <style name="ToolbarTitleAppearance">
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarMenuAppearance">
        <item name="android:textSize">18sp</item>
    </style>
</resources>